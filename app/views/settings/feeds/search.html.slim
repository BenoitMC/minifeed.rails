.block-center: form#feed-search
  .card.card-default
    .card-header = t(".title")
    .card-body
      p
        .input-group
          input(
            class       = "form-control"
            type        = "url"
            name        = "url"
            id          = "url"
            value       = params[:url]
            placeholder = t(".placeholder")
          )

          .input-group-append
            button class="btn btn-success" type="submit" = t(".submit")

- if @results&.any?
  #feed-search-results.list-group
    - @results.each do |result|
      a.list-group-item.list-group-item-action href=url_for(action: :new, feed: {url: result.url, name: result.name})
        = icon(:feed)
        = " "
        strong = result.name
        span.text-muted
          = " - "
          = result.url
